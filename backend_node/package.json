{
  "name": "backend-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev:gateway": "npm run dev -w apps/gateway",
    "build:gateway": "npm run build -w apps/gateway",
    "start:gateway": "npm run start -w apps/gateway",

    "dev:worker": "npm run dev -w apps/worker",

    "docker:up": "docker compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker compose -f infra/docker-compose.yml down -v"
  }
}